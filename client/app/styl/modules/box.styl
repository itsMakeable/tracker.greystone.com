.box
	position relative
	font-family f-reg
	padding-top px(10rem)
	padding-bottom px(40rem)
	// margin-bottom px(30rem)
	upcase()
	color darkgray
	border-color gray
	// background-color lightgray
	&.is-yellow
		border-color yellow
		color white
		background-color rgba(yellow)
	.alert-circle
		position absolute
		top px(-17/2)  !important
		right px(-17/2) !important
	
.file-drop-active
	.box.dotted-border
		// background-color blue
		border 2px dashed blue
		color blue

.box__row
	padding-right px(32rem)
	background url(../svg/symbols/icon_edit.svg) no-repeat
	background-size 22px 22px
	background-position 100% 0%
	height px(26rem)
	position relative
	&:after
		content ''
		display block
		height 1px
		width 100%
		position absolute
		background-color white
		bottom px(4rem)
	
.box__title
	fs(2rem)
	text-transform capitalize
	ilb()
	line-height 1
	
.box__icon--edit
	ilb(top)
	margin-left: 10px
	width: 20px
	float left
	
.box__center
	text-align left
	align()
	
