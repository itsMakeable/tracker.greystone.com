.box
	position relative
	font-family f-reg
	padding-top px(10rem)
	padding-bottom px(40rem)
	// margin-bottom px(30rem)
	text-transform uppercase
	color darkgray
	border-color gray
	// background-color lightgray
	&.is-yellow
		border-color yellow
		color white
		background-color rgba(yellow)
	.alert-circle
		position absolute
		top px(-17/2)  !important
		right px(-17/2) !important
	
.file-drop-active
	.box.dotted-border
		// background-color blue
		border 2px dashed blue
		color blue
		
.box__col2
	col(1/7)
	&:last-child
		col(6/7)

.box__row
	padding-right px(32rem)
	// background url(../svg/icon_edit.svg) no-repeat
	// background-size 22px 22px
	// background-position 100% 0%
	height px(26rem)
	position relative
	display inline-block
	width auto
	transition width t-greystone1
	overflow hidden
	.icon
		size px(20rem)
		position absolute
		right 0
		&.box__edit-icon--cancel
			right px(30rem)	
			size px(14rem)
			top px(4rem)
	.box__edit
		display none !important
	&:after
		content ''
		display block
		height 1px
		transition t-greystone1
		position absolute
		background-color white
		bottom px(4rem)
		width 0%
	&.is-editing
		// background url(../svg/icon_check.svg) no-repeat
		// background-size 22px 22px
		// background-position 100% 0%
		width 100%
		&:after
			width 100%
		.box__edit
			display block !important
		.box__title
			opacity 0
	
.box__title
	fs(2rem)
	text-transform capitalize
	line-height 1
	display inline-block
	white-space nowrap
	top 2px
	left 1px
	position relative
	
.box__icon--edit
	ilb(top)
	margin-left: 10px
	width: 20px
	float left
	
.box__center
	text-align left
	align()
	
// .box__col3
