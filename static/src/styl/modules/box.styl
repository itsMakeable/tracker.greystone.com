// 	&.is-center
// 		text-align center
// 	&.is-right
// 		text-align right
	

.box__icon
	size px(15rem)
	margin 0 px(6rem)
	color inherit
	&.is-large
		width 100%
		ilb(top)
		position relative
		top px(-5rem)
	&.is-yellow
		color white
	&.is-gray
		color gray
		
.box__icon--right
	position absolute
	right px(25rem)
	size px(17rem)

.box__metadata
	font-family f-lightit
	
.box__metadata-1
	text-transform uppercase
	fs(1.1rem)

.box__metadata-2
	fs(1rem)
	text-transform capitalize
