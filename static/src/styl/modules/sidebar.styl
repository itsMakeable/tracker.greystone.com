.sidebar-list__container
	margin-top px(40rem)
	.h6
		padding-left 14%

.sidebar-list
	color white
	&.is-completed
		color darkgray
		.sidebar-list__item__indicator
			opacity 1
			border 2px solid mantle
			background mantle url(unquote('data:image/svg+xml;base64,PHN2ZyBpZD0iTGF5ZXJfMSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIiB2aWV3Qm94PSIwIDAgMTAwIDEwMCI+PHBhdGggZmlsbD0ibm9uZSIgc3Ryb2tlPSJ3aGl0ZSIgc3Ryb2tlLXdpZHRoPSI0IiBzdHJva2UtbWl0ZXJsaW1pdD0iMTAiIGQ9Ik0yLjQgNTBsMzEuOCAzMS44IDYzLjYtNjMuNiIvPjwvc3ZnPg==')) no-repeat
			background-size 65%
			background-position 50% 50%
		.sidebar-small
			color darkgray
	&.is-pending
		.sidebar-list__item__indicator
			border 2px solid darkergray
			background-color darkergray

.sidebar-list__item
	padding 0 14%
	height px(46rem)
	margin px(5rem) 0
	position relative
	// background-color rgba(deepblack,0.1)
	fs(1.3rem)
	line-height 1
	upcase()
	font-family f-reg
	.sidebar-small
		line-height 1.5
		display block
		font-family f-lightit
	.alert-circle
		position absolute
		right 10%
		top 0
		bottom 0
		margin auto
	&.is-active
		&:after
			content ''
			position absolute
			right px(-22.8rem)
			top 0
	&.is-gray
		background-color darkergray
		color white
		.sidebar-small
			color white
		&:after
			content ''
			triangle: 'right' px(24rem) darkergray
			
