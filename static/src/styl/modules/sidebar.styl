.sidebar-list__container
	margin-top px(40rem)
	position relative
	.h6
		padding-left 14%
	.is-right
		position absolute
		right 6%
		top 0
		bottom 0
		margin auto
		color darkgray
		transition 0.2s ease
		cursor pointer
		text-transform capitalize
		font-family f-light
		height px(10rem)
		transition t-greystone1
		svg
			size px(10rem)
			margin-right px(5rem)
			transition t-greystone1
		&:hover
			color blue
			svg
				color white
	p.is-right
		height auto
		opacity 1 !important
			

.sidebar-list
	color white
	&.is-completed
		color darkgray
		.sidebar-list__item__indicator
			opacity 1
			border 2px solid mantle
			background-color mantle
			color white
			svg
				size px(20rem)
				position absolute
				top px(-5rem)
				left px(2rem)
