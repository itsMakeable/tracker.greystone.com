			color darkgray
	&.is-pending
		.sidebar-list__item__indicator
			border 2px solid darkergray
			background-color darkergray

.sidebar-list__item
	padding 0 14%
	height px(46rem)
	margin px(5rem) 0
	position relative
	// background-color rgba(deepblack,0.1)
	fs(1.3rem)
	line-height 1
	upcase()
	font-family f-reg
	transition t-greystone1
	.is-right
		opacity 0
	.sidebar-small
		line-height 1.5
		display block
		font-family f-lightit
	.alert-circle
		position absolute
		right 6%
		top 0
		bottom 0
		margin auto
	&.is-active
		&:after
			content ''
			position absolute
			right px(-22.8rem)
			top 0
	&.is-gray
		background-color darkergray
		color white
		.sidebar-small
			color white
		&:after
			content ''
			triangle: 'right' px(24rem) darkergray
	&:hover
		background-color rgba(deepblack,0.1)
		.is-right
			opacity 1
			
