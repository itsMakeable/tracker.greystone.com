.main-sidebar
	span(3/10)
	// min-width 320px
	min-height 100vh
	top 0
	bottom 0
	height 100vh
	background-color black
	color gray
	overflow-x hidden
	overflow-y scroll
	+below(1700px)
		span(4/10)
	// +below(1200px)
	// 	span(4/10)
	hr
		border-bottom 1px solid rgb(70,70,70)
	.button
		background-color darkgray
		transtion t-greystone1
		color white
		align(horizontal)
		display inline-block
		&:hover
			background-color gray
	.messages-info
		background url(unquote('../svg/triple-hr--dark.svg')) repeat-x
		margin-top px(30rem)
		padding-bottom px(10rem)
		&:hover
			color white
		span
			background-color black
	.sidebar-list__item
		text-rendering optimizeLegibility
		-webkit-font-smoothing antialiased
		font-smoothing antialiased
	.h2
		color mantle
	&:before
		content: ''
		position: absolute
		top: 0
		left 0
		bottom: 0
		z-index: -1
		background-color black
		width inherit
		display block
	
		
	
