.sidebar-list__center
	align(vertical)
	text-align left
		
.sidebar-list__item__indicator
	display inline-block
	border-radius 50%
	border 2px solid yellow
	background-color yellow
	size px(20rem)
	position absolute
	left px(-30rem)
	top 0
	bottom 0
	margin auto
	
.main-chart
	width 65%
	margin px(25rem) auto px(20rem) auto
