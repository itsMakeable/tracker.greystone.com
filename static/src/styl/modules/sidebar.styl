.main-main
	span(8/10)
	position relative
	.container
		max-width px(768rem)
		+below(1700px)
			margin-right 10%
			padding-left 10%
		+below(1200px)
			margin-right 5%
		// +below(1700px)
		// 	width 60%
	+below(1700px)
		span(7/10)
		float right
	// +below(1200px)

.main-sidebar
	span(2/10)
	min-width 320px
	min-height 100vh
	top 0
	bottom 0
	background-color black
	color gray
	+below(1700px)
		span(3/10)
	+below(1200px)
		span(4/10)
	hr
		border-bottom 1px solid rgb(70,70,70)
	.messages-info
		background url(unquote('../svg/triple-hr--dark.svg')) repeat-x
		margin-top px(30rem)
		padding-bottom px(10rem)
		span
			background-color black
	.sidebar-list__item
		text-rendering optimizeLegibility
		-webkit-font-smoothing antialiased
		font-smoothing antialiased
	.h2
		color mantle
	&:before
		content: ''
		position: absolute
		top: 0
		left 0
		bottom: 0
		z-index: -1
		background-color black
		width inherit
		display block
	
		
	
