// edit()
.user-notification
	position relative	
	color darkgray
	font-family f-reg
	overflow hidden
	padding 0 0 px(5rem) 0
	background url(../svg/vr.svg) no-repeat
	background-position 25px 0
	&.has-padding
		padding 0 0 px(22rem) 0
	&:not(.has-padding) + .has-padding
		padding px(10rem) 0 px(22rem) 0
	&:first-of-type
		background url(../svg/vr.svg) no-repeat
		background-position 25px 14px
	&:nth-last-of-type(2)
		background url(../svg/vr-small.svg) no-repeat
		background-position 25px 0
		background-size 1px 25px
	&.is-comment-box
		background none
	&.is-comment-box
		padding-top px(20rem)
		.user-notification__box
			background-color mantle
			color white
		hr
			border-color white
	// .profile-pic
	// 	margin-right px(10rem)
	a
		color blue
	
.user-notification__box
	padding 2rem
	position relative
	width 100%
	max-width 90%
	max-width calc(100% - 57px)
	ilb()
	background-color lightgray
	hr
		margin px(10rem) 0

	&.is-white
		background-color white

.user-notification__top-right
	font-family f-light
	position absolute
	top 2rem
	right 2rem

.user-notification__h1
	upcase()
	fs(1.4rem)
	color black
	padding-bottom px(10rem)
	
.user-notification__p
	fs(1.2rem)
	.is-yellow
		color yellow

.user-notification__textarea
	width calc(100% - 100px)
	background-color transparent
	overflow: auto
	color white
	&::placeholder
		color white

.profile-pic
	border-radius 50%
	size px(30rem)
	background white url(http://lorempixel.com/120/120/people/) 
	background-repeat no-repeat !important
	background-position 50% 50% !important
	background-size cover !important
	border 10px solid white
	ilb(top)
	position relative
	top px(7.5rem)
	&.is-assigned
		size px(30rem)
		background white url(../svg/icon_user.svg) 
		background-repeat no-repeat !important
		background-size 80% auto !important
		background-position 50% 50% !important
		top px(12.5rem)
		left px(7.3rem)
		border 5px solid white
	&.is-uploaded
